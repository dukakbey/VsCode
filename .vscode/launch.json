    "version": "0.2.0",
    "configurations":
    [
        {
            "name":"Debug",
            "miDebuggerPath": "c:\\msys64\\mingw64.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/hello.exe",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "environment": [{ "name": "config", "value": "Debug"}],
            "externalConsole": false, 
            "MIMode": "gdb",           
            "setupCommands": 
            [
                {
                    "description": "Enable pretty printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        }
        
    ]
    
}